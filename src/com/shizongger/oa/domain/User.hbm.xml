<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.shizongger.oa.domain">

	<class name="User" table="itcast_user">
		<id name="id">
            <generator class="native"/>
		</id>
		<property name="loginName" />
		<property name="password" />
		<property name="name" />
		<property name="gender" />
		<property name="phoneNumber" />
		<property name="email" />
		<property name="description" />
		
		<!-- department属性，本类与Department的多对一 -->
		<many-to-one name="department" class="Department" column="departmentId" lazy="false" fetch="join"/>
		
		<!-- roles属性，本类与Role的多对多 -->
		<set name="roles" table="itcast_user_role" lazy="false" fetch="join">
			<key column="userId"></key>
			<many-to-many class="Role" column="roleId" />
		</set>
	</class>
	
</hibernate-mapping>
